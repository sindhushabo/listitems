<p id="notice"><%= notice %></p>

<h1>Listing Shop Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_lists.each do |shop_list| %>
      <tr>
        <td><%= shop_list.title %></td>
        <td><%= shop_list.description %></td>
        <td><%= link_to 'Show', shop_list %></td>
        <td><%= link_to 'Edit', edit_shop_list_path(shop_list) %></td>
        <td><%= link_to 'Destroy', shop_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

