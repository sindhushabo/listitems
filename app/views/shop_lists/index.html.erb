<link rel="stylesheet" type="text/css" href="application.scss" media="screen" />

<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th> <br>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_lists.each do |shop_list| %>
      <tr>
        <td><%= shop_list.title %></td>
        <td><%= shop_list.description %></td>
        <td><%= link_to 'Show', shop_list, :class=>"action-button green" %></td>
        <td><%= link_to 'Edit', edit_shop_list_path(shop_list), :class=>"action-button blue"  %></td>
        <td><%= link_to 'Destroy', shop_list, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"action-button red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop list', new_shop_list_path, :class=>"action-button pink" %>
